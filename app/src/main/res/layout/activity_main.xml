<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etString"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/string_hint"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnReverse"
        android:text="@string/reverse_text"
        app:layout_constraintTop_toBottomOf="@id/etString"
        android:onClick="onClick"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvReversedString"
        app:layout_constraintTop_toBottomOf="@id/btnReverse"
        />

</androidx.constraintlayout.widget.ConstraintLayout>